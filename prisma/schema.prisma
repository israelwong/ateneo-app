generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Alumno {
  id    Int     @id @default(autoincrement())
  nombre  String @unique
  nivel String 
  grado String?
  grupo String?
  matricula String @unique
  alergias String?
  tipo_sangre String?
  padre_tutor String?
  ciclo_escolar String?
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
